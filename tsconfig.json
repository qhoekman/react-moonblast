{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@moonblast/*": ["./*/src"]
    }
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "packages/**/lib"]
}
